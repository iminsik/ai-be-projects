# AI Job Queue System Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=development
JOB_STATUS_TTL=86400

# =============================================================================
# AI WORKER CONFIGURATION
# =============================================================================
MODEL_STORAGE_PATH=./models
WORKER_ID=worker-1
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT=3600
LOG_LEVEL=INFO
USE_GPU=false
GPU_DEVICE=0

# =============================================================================
# PRODUCTION SETTINGS (uncomment and modify for production)
# =============================================================================
# ENVIRONMENT=production
# REDIS_PASSWORD=your-strong-redis-password
# DEBUG=false
# LOG_LEVEL=WARNING

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS (examples)
# =============================================================================
# For AWS/GCP/Azure with managed Redis:
# REDIS_HOST=your-redis-instance.redis.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-auth-token

# For Kubernetes:
# REDIS_HOST=redis-service.ai-job-queue.svc.cluster.local
# REDIS_PORT=6379

# For Docker Compose:
# REDIS_HOST=redis
# REDIS_PORT=6379
